{
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "customizations": {
        "vscode": {
            "extensions": [
                "svelte.svelte-vscode",
                "davidanson.vscode-markdownlint",
                "github.copilot",
                "github.copilot-chat"
            ],
            "settings": {
                "files.autoSave": "afterDelay",
                "editor.formatOnSave": true
            }
        }
    }
}